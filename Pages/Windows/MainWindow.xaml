<Window x:Class="ClaimsSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Claims System" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Menu -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#2c3e50" Height="50">
            <Button x:Name="DashboardButton" Content="Dashboard" 
                    Tag="DashboardPage" Click="NavButton_Click" 
                    Margin="10,0" Background="#3498db" Foreground="White"/>
            <Button x:Name="SubmitClaimButton" Content="Submit Claim" 
                    Tag="SubmitClaimPage" Click="NavButton_Click" 
                    Margin="10,0" Background="#2ecc71" Foreground="White"/>
            <Button x:Name="AdminButton" Content="Admin" 
                    Tag="AdminPage" Click="NavButton_Click" 
                    Margin="10,0" Background="#e74c3c" Foreground="White"/>
        </StackPanel>

        <!-- Frame for Pages -->
        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
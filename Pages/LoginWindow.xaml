<Page x:Class="Part1.LoginWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Part1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginWindow"
      Background="White">
    <!-- Set the Background property here -->

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
        <TextBlock Text="CMCS Login" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <TextBox x:Name="UsernameTextBox" Text="Username (e.g., lecturer@email.com)" Margin="5" Padding="2"/>
        <PasswordBox x:Name="PasswordBox" Password="password" Margin="5" Padding="2"/>
        <ComboBox x:Name="RoleComboBox" SelectedIndex="0" Margin="5">
            <ComboBoxItem>Lecturer</ComboBoxItem>
            <ComboBoxItem>Programme Coordinator</ComboBoxItem>
            <ComboBoxItem>Academic Manager</ComboBoxItem>
        </ComboBox>
        <Button x:Name="LoginButton" Content="Login" Margin="5" Height="30"/>
        <TextBlock x:Name="LoginStatusText" Text="Status: Not logged in" HorizontalAlignment="Center" Margin="5"/>
    </StackPanel>
</Page>
<Page x:Class="Part1.SubmitClaimPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Part1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SubmitClaimPage">
    <StackPanel Margin="20">
        <TextBlock Text="My Claim History" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- A DataGrid is perfect for showing tabular data like this -->
        <DataGrid x:Name="ClaimsDataGrid" Height="300" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Claim ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Period" Binding="{Binding Period}" Width="100"/>
                <DataGridTextColumn Header="Hours" Binding="{Binding Hours}" Width="60"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="80"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Date Submitted" Binding="{Binding DateSubmitted}" Width="120"/>
                <!-- 'View' button column would be added here in a functional version -->
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Page>
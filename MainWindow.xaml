<Window x:Class="Part1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Part1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Menu -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#2c3e50">
            <Button Content="Dashboard" Click="NavButton_Click" Tag="DashboardPage"/>
            <Button Content="Submit Claim" Click="NavButton_Click" Tag="SubmitClaimPage"/>
            <Button Content="Admin" Click="NavButton_Click" Tag="AdminPage"/>
        </StackPanel>

        <!-- Frame for Pages -->
        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>